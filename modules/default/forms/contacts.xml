<?xml version="1.0" encoding="UTF-8"?>
<modelo>
    <elements>
        <id>
            <type>hidden</type>
            <options>
            </options>
        </id>
        <name>
            <type>text</type>
            <options>
                <label>Name</label>
                <required>true</required>
                <validators>
                    <alnum>
                        <validator>Alnum</validator>
                        <options>
                            <allowWhiteSpace>true</allowWhiteSpace>
                        </options>
                    </alnum>
                    <strlen>
                    	<validator>StringLength</validator>
                    	<options>
                        	<min>1</min>
                        	<max>80</max>
                    	</options>
                    </strlen>
                </validators>
            </options>
        </name>
        <group>
            <type>select</type>
            <options>
                <required>true</required>
                <label>Group</label>
            </options>
        </group>
        <address>
            <type>text</type>
            <options>
                <label>Address</label>
            </options>
        </address>
        <city>
            <type>select</type>
            <options>
                <label>City</label>
            </options>
        </city>
        <state>
            <type>select</type>
            <options>
                <label>State</label>
            </options>
        </state>
        <zipcode>
            <type>text</type>
            <options>
                <label>Zip Code</label>
                <description>Numbers only</description>
                <validators>
                    <regex>
                        <validator>regex</validator>
                        <options>
                            <pattern>/[[:digit:]]/i</pattern>
                            <messages>
                                <regexNotMatch>This field should contain numbers only</regexNotMatch>
                            </messages>
                        </options>
                    </regex>
                    
                    <strlen>
                    	<validator>StringLength</validator>
                    	<options>
                        	<min>0</min>
                        	<max>8</max>
                    	</options>
                    </strlen>
                </validators>
            </options>
        </zipcode>
        <phone>
            <type>text</type>
            <options>
                <label>Phone</label>
                 <validators>
                    <alnum>
                        <validator>Alnum</validator>
                        <options>
                            <allowWhiteSpace>true</allowWhiteSpace>
                        </options>
                    </alnum>
                    <regex>
                        <validator>regex</validator>
                        <options>
                            <pattern>/[[:digit:]]/i</pattern>
                            <messages>
                                <regexNotMatch>This field should contain numbers only</regexNotMatch>
                            </messages>
                        </options>
                    </regex>
                      <strlen>
                    	<validator>StringLength</validator>
                    	<options>
                        	<min>1</min>
                        	<max>15</max>
                    	</options>
                    </strlen>
                </validators>
            </options>
        </phone>
        <cell>
            <type>text</type>
            <options>
                <label>Cellphone</label>
                 <validators>
                    <alnum>
                        <validator>Alnum</validator>
                        <options>
                            <allowWhiteSpace>true</allowWhiteSpace>
                        </options>
                    </alnum>
                    <regex>
                        <validator>regex</validator>
                        <options>
                            <pattern>/[[:digit:]]/i</pattern>
                            <messages>
                                <regexNotMatch>This field should contain numbers only</regexNotMatch>
                            </messages>
                        </options>
                    </regex>
                      <strlen>
                    	<validator>StringLength</validator>
                    	<options>
                        	<min>1</min>
                        	<max>15</max>
                    	</options>
                    </strlen>
                </validators>
            </options>
        </cell>
    </elements>
</modelo>
