<?xml version="1.0" encoding="UTF-8"?>
<modelo>
    <elements>
        <group>
            <type>text</type>
            <options>
                <label>Name</label>
                <required>true</required>
                <validators>
                    <alnum>
                        <validator>Alnum</validator>
                        <options>
                            <allowWhiteSpace>true</allowWhiteSpace>
                        </options>
                    </alnum>
                      <strlen>
                    	<validator>StringLength</validator>
                    	<options>
                        	<min>1</min>
                        	<max>20</max>
                    	</options>
                    </strlen>
                </validators>
            </options>
        </group>
    </elements>
</modelo>
