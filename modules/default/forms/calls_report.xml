<?xml version="1.0" encoding="UTF-8"?>
<form>

    <period>
        <elements>
        	<initDay>
            	     <type>text</type>
            	     <options>
                         <label>From:</label>
                         <required>true</required>
                         <description>dd/mm/aaaa</description>
                     </options>
	        </initDay>

            <finalDay>
                <type>text</type>
                <options>
                    <label>To:</label>
                    <description>dd/mm/aaaa</description>
                    <required>true</required>
                </options>
            </finalDay>

            <order>
                <type>radio</type>
                <options>
                    <label>Sort Results</label>	
                    <separator></separator>
                    <multioptions>
                        <data>by data</data>
                        <src>by source</src>
                        <dst>by destination</dst>
                    </multioptions>
                </options>
            </order>
        </elements>
    </period>

    <source>
        <elements>
            <selectSrc>
                <type>select</type>
                <options>
                    <label>Source Group</label>
                </options>
            </selectSrc>

            <groupSrc>
                <type>text</type>
                <options>
                    <label>Source Extensions</label>
                    <description>Separated by a comma</description>
                </options>
            </groupSrc>

            <srctype>
                <type>radio</type>
                <options>
                    <label></label>	
                    <separator></separator>
                    <multioptions>
                        <src1>Equal</src1>
                        <src2>Init with</src2>
                        <src3>End with</src3>
                        <src4>Contains</src4>
                    </multioptions>
                </options>
            </srctype>
        </elements>
    </source>

    <destination>
        <elements>
            <selectDst>
                <type>select</type>
                <options>
                    <label>Destination Group</label>
                </options>
            </selectDst>

            <groupDst>
                <type>text</type>
                <options>
                    <label>Destination Extensions</label>
                    <description>Separated by a comma</description>
                </options>
            </groupDst>

            <dsttype>
                <type>radio</type>
                <options>
                    <label></label>	
                    <separator></separator>
                    <multioptions>
                        <dst1>Equal</dst1>
                        <dst2>Init with</dst2>
                        <dst3>End with</dst3>
                        <dst4>Contains</dst4>
                    </multioptions>
                </options>
            </dsttype>
        </elements>
    </destination>

    <calls>
        <elements>
            <costs_center>
                <type>select</type>
                <options>
                    <multiple>True</multiple>
                    <label>Cost Center</label>
                </options>
            </costs_center>

            <status>
                <type>MultiCheckbox</type>
                <options>
                    <label>Status</label>
                    <checked>checked</checked>
                    <separator></separator>
                    <multioptions>
                        <ANSWERED>Answered</ANSWERED>
                        <NOANSWER>Not Answered</NOANSWER>
                        <BUSY>Busy</BUSY>
                        <FAILED>Failed</FAILED>
                    </multioptions>
                </options>
            </status>

            <duration_init>
                <type>text</type>
                <options>
                    <label>From</label>
                    <description>seconds</description>
                </options>
            </duration_init>

            <duration_end>
                <type>text</type>
                <options>
                    <label>To</label>
                    <description>seconds</description>
                </options>
            </duration_end>

            <type>
                <type>radio</type>
                <options>
                    <label>Call Type</label>
                    <separator></separator>
                    <multioptions>
                        <T>All</T>
                        <S>Originated</S>
                        <E>Received</E>
                        <O>Others</O>
                    </multioptions>
                </options>
            </type>
        </elements>
    </calls>

    <others>
        <elements>
            <charging>
                <type>Checkbox</type>
                <options>
                    <label>View Charging</label>
                    <description>Yes</description>
                </options>
            </charging>

            <show_records>
                <type>Checkbox</type>
                <options>
                    <label>View recording files</label>
                    <description>Yes</description>
                </options>
            </show_records>

		<!--<graph_type>
		    <type>radio</type>
		    <options>
			<label>Tipo de gr√°fico</label>
			<separator></separator>
			<multioptions>
				<bars>Barras</bars>
				<lines>Linhas</lines>
			</multioptions>
		    </options>
		</graph_type>-->

            <report_type>
                <type>radio</type>
                <options>
                    <label>Report Type</label>
                    <separator></separator>
                    <multioptions>
                        <analytical>Analytic</analytical>
                        <synth>Synthetic</synth>
                    </multioptions>
                </options>
            </report_type>
        </elements>
    </others>
</form>
