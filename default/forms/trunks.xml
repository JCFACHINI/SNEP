<?xml version="1.0" encoding="UTF-8"?>

<!--
    Document   : trunks.xml
    Created on : 4 de Abril de 2011, 13:35
    Author     : Rafael Bozzetti
    Description:
        Snep Form specification for trunks controller
-->

<form>
    <trunks>
        <elements>
            <callerid>
                <type>Text</type>
                <options>
                    <required>true</required>
                    <label>Nome</label>
                </options>
            </callerid>
        </elements>
    </trunks>
    <technology>
        <elements>
            <type>
                <type>Select</type>
                <options>
                    <label>Tipo de tronco</label>
                    <multioptions>
                        <sip>SIP</sip>
                        <iax2>IAX2</iax2>
                        <khomp>Khomp</khomp>
                        <virtual>TDM/Virtual</virtual>
                        <snepsip>Snep SIP</snepsip>
                        <snepiax2>Snep IAX2</snepiax2>
                    </multioptions>
                </options>
            </type>
        </elements>
    </technology>
    <ip>
        <elements>
            <dialmethod>
                <type>radio</type>
                <options>
                    <label>Método de Discagem</label>
                    <value>normal</value>
                    <separator> </separator>
                    <multioptions>
                        <normal>Normal</normal>
                        <noauth>Sem autenticação</noauth>
                    </multioptions>
                </options>
            </dialmethod>
            <username>
                <type>Text</type>
                <options>
                    <label>Usuário</label>
                </options>
            </username>
            <secret>
                <type>password</type>
                <options>
                    <label>Senha</label>                    
                </options>
            </secret>
            <host>
                <type>Text</type>
                <options>
                    <label>Host Remoto</label>
                </options>
            </host>
            <fromuser>
                <type>text</type>
                <options>
                    <label>Especificar Usuário de Origem</label>
                </options>
            </fromuser>
            <fromdomain>
                <type>text</type>
                <options>
                    <label>Dominio de Origem</label>                    
                </options>
            </fromdomain>
            <dtmfmode>
                <type>radio</type>
                <options>
                    <label>DTMF Mode</label>
                    <value>rfc2833</value>
                    <separator> </separator>
                    <multioptions>
                        <rfc2833>RFC-2833</rfc2833>
                        <inband>Inband</inband>
                        <info>Info</info>
                    </multioptions>
                </options>
            </dtmfmode>
            <qualify>
                <type>radio</type>
                <options>
                    <label>Controle de Qualidade</label>
                    <value>yes</value>
                    <separator> </separator>
                    <multioptions>
                        <yes>Sim</yes>
                        <no>Não</no>
                        <specify>Especificar</specify>
                    </multioptions>
                </options>                
            </qualify>
            <qualify_value>
                <type>text</type>
                <options>
                    <separator> </separator>
                </options>
            </qualify_value>
            <peer_type>
                <type>radio</type>
                <options>
                    <label>Tipo de Peer (SIP)</label>
                    <value>peer</value>
                    <separator> </separator>
                    <multioptions>
                        <peer>Peer</peer>
                        <friend>Friend</friend>
                    </multioptions>
                </options>
            </peer_type>
            <reverse_auth>
                <type>checkbox</type>
                <options>
                    <value>1</value>
                    <label>Força Autenticação Reversa</label>
                    <description>Habilitar</description>
                </options>
            </reverse_auth>
            <nat>
                <type>checkbox</type>
                <options>
                    <label>Atravessa Nat</label>
                    <description>Habilitar</description>
                </options>
            </nat>  
            
            <codec>
                <type>codec</type>
                <options>
                    <value>ulaw</value>
                    <label>Codec 1</label>
                    <description>Prioritary</description>
                </options>
            </codec>
            <codec1>
                <type>codec</type>
                <options>
                    <value>alaw</value>
                    <label>Codec 2</label>
                </options>
            </codec1>
            <codec2>
                <type>codec</type>
                <options>
                    <value>ilbc</value>
                    <label>Codec 3</label>
                </options>
            </codec2>

            <domain>
                <type>text</type>
                <options>
                    <label>Dominio</label>
                </options>
            </domain>
            <insecure>
                <type>text</type>
                <options>
                    <label>Insecure</label>
                </options>
            </insecure>
            <port>
                <type>text</type>
                <options>
                    <label>Porta</label>
                </options>
            </port>
            <calllimit>
                <type>text</type>
                <options>
                    <label>Limite de Canais</label>
                </options>
            </calllimit>
        </elements>
    </ip>
    <iax2>
        <elements>
            <istrunk>
                <type>select</type>
                <options>
                    <label>Trunk</label>
                    <multioptions>
                        <yes>Sim</yes>
                        <no>Não</no>
                    </multioptions>
                </options>
            </istrunk>
        </elements>
    </iax2>
    <virtual>
        <elements>
            <channel>
                <type>Text</type>
                <options>
                    <label>Tecnologia de Canais</label>
                </options>
            </channel>
            <id_regex>
                <type>Text</type>
                <options>
                    <label>Expressão de Identificação</label>
                    <description></description>
                </options>
            </id_regex>
        </elements>
    </virtual>
    <khomp>
        <elements>
            <board>
                <type>Select</type>
                <options>
                    <label>Placa</label>
                </options>
            </board>
        </elements>
    </khomp>
    <snepsip>
        <elements>
            <host>
                <type>text</type>
                <options>
                    <label>Host Remoto</label>
                </options>
            </host>
            <dtmfmode>
                <type>radio</type>
                <options>
                    <label>Modo de DTMF</label>
                    <value>rfc2833</value>
                    <multioptions>
                        <rfc2833>RFC-2833</rfc2833>
                        <inband>Inband</inband>
                        <info>Info</info>
                    </multioptions>
                </options>
            </dtmfmode>
        </elements>
    </snepsip>
    <snepiax2>
        <elements>
            <username>
                <type>text</type>
                <options>
                    <label>Identificador</label>
                    <description>O mesmo em ambas os servidores</description>
                </options>
            </username>
            <nat>
                <type>checkbox</type>
                <options>
                    <label>Atravessar NAT</label>
                    <description>Habilitado</description>
                </options>
            </nat>
        </elements>
    </snepiax2>
   <advanced>
        <elements>
            <map_extensions>
                <type>Checkbox</type>
                <options>
                    <label>Permitir mapeamento de ramais</label>
                    <description>Habilitar</description>
                </options>
            </map_extensions>
            <dtmf_dial>
                <type>Checkbox</type>
                <options>
                    <label>Modo de DTMF</label>
                    <description>Habilitar</description>
                </options>
            </dtmf_dial>
            <dtmf_dial_number>
                <type>Text</type>                
            </dtmf_dial_number>
            <tempo>
                <type>Checkbox</type>
                <options>
                    <label>Controle de Minutos</label>
                    <description>Habilitar</description>
                    <value>no</value>
                    <separator> </separator>                    
                </options>
            </tempo>
            <time_total>
                <type>Text</type>
                <options>
                    <label>Credito em Minutos</label>
                </options>
            </time_total>
            <time_chargeby>
                <type>radio</type>
                <options>
                    <label>Tipo de Controle</label>
                    <separator> </separator>
                    <multioptions>
                        <Y>Ano</Y>
                        <M>Mês</M>
                        <D>Dia</D>
                    </multioptions>
                </options>
            </time_chargeby>
        </elements>
    </advanced>
</form>
