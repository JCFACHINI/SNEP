<form>
    
    <period>
        <elements>
            
            <init_day>
                <type>text</type>
                <options>
                    <label>A partir de</label>
                    <description>dd/mm/aaaa</description>
                    <required>true</required>
                </options>
            </init_day>
            
            <init_hour>
                <type>text</type>
                <options>
                    <label>mm:hh</label>
                    <value>00:00</value>
                </options>
            </init_hour>
            
            <till_day>
                <type>text</type>
                <options>
                    <label>Até</label>
                    <description>dd/mm/aaaa</description>
                    <required>true</required>
                </options>
            </till_day>
            
            <till_hour>
                <type>text</type>
                <options>
                    <label>mm:hh</label>
                    <value>23:59</value>
                </options>
            </till_hour>
            
        </elements>    
    </period>  
    
    <rank>
        <elements>
            
            <type>
                <type>radio</type>
                <options>
                    <label>Tipo de Ranking</label>
                    <value>num</value>
                    <separator> </separator>
                    <multioptions>
                        <num>Quantidade</num>
                        <time>Tempo</time>
                    </multioptions>
                </options>
            </type>
            
            <origin>
                <type>text</type>
                <options>
                    <label>Exibir Ranking de 'n' Origens</label>
                    <value>10</value>
                    <description>Apenas números</description>
                     <validators>
                        <alnum>
                            <validator>Alnum</validator>
                        </alnum>
                        <regex>
                            <validator>regex</validator>
                            <options>
                                <pattern>/[[:digit:]]/i</pattern>
                                <messages>
                                    <regexNotMatch>Este campo deve conter apenas números</regexNotMatch>
                                </messages>                     
                            </options>
                        </regex>
                        </validators>
                </options>
            </origin>
            
            <view>
                <type>select</type>
                <options>
                    <label>Exibir os TOP 'n' por Origem</label>
                    <value>10</value>
                </options>
            </view>
            
        </elements>    
    </rank>  

</form>
