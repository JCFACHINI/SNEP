<form>
    <extension>
        <elements>
            <exten>
                <type>Text</type>
                <options>
                    <label>Extension</label>
                </options>
            </exten>
            <password>
                <type>Password</type>
                <options>
                    <label>Password</label>
                </options>
            </password>
            <name>
                <type>Text</type>
                <options>
                    <label>Name</label>
                </options>
            </name>
            <exten_group>
                <type>ExtensionGroup</type>
                <options>
                    <label>Extension Group</label>
                    <value>users</value>
                </options>
            </exten_group>
            <pickup_group>
                <type>PickupGroup</type>
                <options>
                    <label>Pickup Group</label>
                </options>
            </pickup_group>
        </elements>
    </extension>
    <technology>
        <elements>
            <type>
                <type>Select</type>
                <options>
                    <label>Type</label>
                    <multioptions>
                        <sip>SIP</sip>
                        <iax2>IAX2</iax2>
                        <khomp>Khomp</khomp>
                        <virtual>Virtual</virtual>
                        <manual>Manual</manual>
                    </multioptions>
                </options>
            </type>
        </elements>
    </technology>
    <advanced>
        <elements>
            <voicemail>
                <type>MultiCheckbox</type>
                <options>
                    <label>Voicemail</label>
                    <multioptions>
                        <option>Enabled</option>
                    </multioptions>
                </options>
            </voicemail>
            <email>
                <type>Text</type>
                <options>
                    <label>E-Mail</label>
                </options>
            </email>

            <padlock>
                <type>MultiCheckbox</type>
                <options>
                    <label>Padlock</label>
                    <multioptions>
                        <option>Enabled</option>
                    </multioptions>
                </options>
            </padlock>
            
            <minute_control>
                <type>MultiCheckbox</type>
                <options>
                    <label>Minute Control</label>
                    <multioptions>
                        <option>Enabled</option>
                    </multioptions>
                </options>
            </minute_control>
        </elements>
    </advanced>
    <ip>
        <elements>
            <password>
                <type>Password</type>
                <options>
                    <label>Password</label>
                </options>
            </password>
            <calllimit>
                <type>Text</type>
                <options>
                    <label>Simultaneous Call Limit</label>
                </options>
            </calllimit>
            <nat>
                <type>MultiCheckbox</type>
                <options>
                    <label>NAT</label>
                    <multioptions>
                        <enable>Enable NAT</enable>
                    </multioptions>
                </options>
            </nat>
            <qualify>
                <type>MultiCheckbox</type>
                <options>
                    <label>Qualify</label>
                    <multioptions>
                        <option>Enable delay qualification</option>
                    </multioptions>
                </options>
            </qualify>
            <type>
                <type>radio</type>
                <options>
                    <label>Type</label>
                    <value>peer</value>
                    <separator> </separator>
                    <multioptions>
                        <peer>Peer</peer>
                        <friend>Friend</friend>
                    </multioptions>
                </options>
            </type>
            <dtmf>
                <type>radio</type>
                <options>
                    <label>DTMF Mode</label>
                    <value>rfc2833</value>
                    <separator> </separator>
                    <multioptions>
                        <rfc2833>RFC-2833</rfc2833>
                        <inband>Inband</inband>
                        <info>Info</info>
                    </multioptions>
                </options>
            </dtmf>
        </elements>
    </ip>
    <manual>
        <elements>
            <manual>
                <type>Text</type>
                <options>
                    <label>Manual</label>
                </options>
            </manual>
        </elements>
    </manual>
    <virtual>
        <elements>
            <virtual>
                <type>Trunk</type>
                <options>
                    <label>Trunk</label>
                </options>
            </virtual>
        </elements>
    </virtual>
</form>
