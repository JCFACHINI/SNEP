<?xml version="1.0" encoding="UTF-8"?>
<modelo>
    <general>
        <elements>
            <name>
                <type>text</type>
                <options>
                    <label>Nome</label>
                    <required>true</required>
                    <validators>
                        <date>
                            <validator>Alnum</validator>
                            <options>
                                <allowWhiteSpace>true</allowWhiteSpace>
                            </options>
                        </date>
                        <regex>
                            <validator>Regex</validator>
                            <options>
                              <pattern>/^[-a-z0-9_]+/i</pattern>
                            </options>
                        </regex>
                    </validators>
                </options>
            </name>
            <type>
            	<type>select</type>            	
            	<options>
            		<label>Tipo</label>
            		<required>true</required>
            	</options>
            </type>
            <required>
            	<type>checkbox</type>
            	<options>
            		<label>Requerido</label>
            		<required>false</required>
            	</options>
           	</required>
        </elements>
    </general>
</modelo>