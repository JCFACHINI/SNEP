<form>
    <attribs>
        <id>routeForm</id>
    </attribs>
    <elements>
        <desc>
            <type>Text</type>
            <options>
                <required>true</required>
                <label>Descrição</label>
                <size>60</size>
            </options>
        </desc>
        <week>
            <type>MultiCheckbox</type>
            <options>
                <label>Dias da semana</label>
                <separator> </separator>
                <multiOptions>
                    <mon>Segunda</mon>
                    <tue>Terça</tue>
                    <wed>Quarta</wed>
                    <thu>Quinta</thu>
                    <fri>Sexta</fri>
                    <sat>Sabado</sat>
                    <sun>Domingo</sun>
                </multiOptions>
            </options>
        </week>
        <record>
            <type>MultiCheckbox</type>
            <options>
                <label>Gravação</label>
                <multiOptions>
                    <enable>Habilitar Gravação</enable>
                </multiOptions>
            </options>
        </record>
        <prio>
            <type>Select</type>
            <options>
                <label>Prioridade</label>
                <multiOptions>
                    <p0>0</p0>
                    <p1>1</p1>
                    <p2>2</p2>
                    <p3>3</p3>
                    <p4>4</p4>
                    <p5>5</p5>
                </multiOptions>
            </options>
        </prio>
    </elements>
</form>
