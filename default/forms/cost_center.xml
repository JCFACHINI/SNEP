<?xml version="1.0" encoding="UTF-8"?>
<modelo>
<elements>
    <id>
        <type>text</type>
        <options>
            <label>Código</label>
            <required>true</required>
            <validators>
                <regex>
                    <validator>regex</validator>
                    <options>
                        <pattern>/^\d\.\d{2}\.\d{2}/i</pattern>
                    </options>
                </regex>
            </validators>
            <description>Somente Números</description>
        </options>
    </id>
    <name>
        <type>text</type>
        <options>
            <label>Nome</label>
            <required>true</required>
            <validators>
                <alnum>
                    <validator>Alnum</validator>
                    <options>
                        <allowWhiteSpace>true</allowWhiteSpace>
                    </options>
                </alnum>
            </validators>
        </options>
    </name>
    <description>
        <type>text</type>
        <options>
            <label>Descrição</label>
        </options>
    </description>
    <type>
        <type>radio</type>
        <options>
            <label>Tipo</label>
        </options>
    </type>
</elements>
</modelo>
