<?xml version="1.0" encoding="UTF-8"?>
<modelo>
<elements>
    <id>
        <type>text</type>
        <options>
            <label>Code</label>
            <required>true</required>
            <description>Numbers only</description>
        </options>
    </id>
    <name>
        <type>text</type>
        <options>
            <label>Name</label>
            <required>true</required>
            <validators>
                <alnum>
                    <validator>Alnum</validator>
                    <options>
                        <allowWhiteSpace>true</allowWhiteSpace>
                    </options>
                </alnum>
            </validators>
        </options>
    </name>
    <description>
        <type>text</type>
        <options>
            <label>Description</label>
        </options>
    </description>
    <type>
        <type>radio</type>
        <options>
            <label>Type</label>
        </options>
    </type>
</elements>
</modelo>
